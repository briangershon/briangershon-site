{
  "name": "briangershon-site",
  "version": "1.0.0",
  "description": "Simple personal blog built with Eleventy, JavaScript, and Tailwind CSS v4",
  "type": "module",
  "scripts": {
    "build:css": "npx tailwindcss -i ./src/assets/css/style.css -o ./_site/assets/css/style.css --watch",
    "build:eleventy": "npx eleventy --config=eleventy.config.js",
    "dev": "npx tailwindcss -i ./src/assets/css/style.css -o ./_site/assets/css/style.css --watch & npx eleventy --serve --config=eleventy.config.js",
    "build": "npx tailwindcss -i ./src/assets/css/style.css -o ./_site/assets/css/style.css && npm run build:eleventy",
    "format": "prettier --write src/**/*.{js,liquid,md}"
  },
  "keywords": [
    "eleventy",
    "blog",
    "javascript",
    "tailwind"
  ],
  "author": "Brian Gershon",
  "license": "MIT",
  "dependencies": {
    "@11ty/eleventy": "^3.1.2"
  },
  "devDependencies": {
    "@11ty/eleventy-plugin-rss": "^2.0.2",
    "@tailwindcss/cli": "^4.1.12",
    "@tailwindcss/typography": "^0.5.16",
    "prettier": "^3.3.3",
    "tailwindcss": "^4.1.12"
  }
}
